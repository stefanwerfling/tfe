{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "outDir": "dist",
    "strict": true,
    "target": "ES2020",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}